<Window x:Class="FutarProgram.FutarAblak"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FutarProgram"
        mc:Ignorable="d"
        Title="FutarAblak" Height="200" Width="400">
    <StackPanel>

        <StackPanel Orientation="Horizontal">
            <Label Content="Név:"/>
            <TextBox Name="NevSzoveg" Width="200"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="Szállítóeszköz típusa:"/>
            <TextBox Name="SzallitoeszkozTipusSzoveg" Width="200"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="Szállítóeszköz leírása:"/>
            <TextBox Name="SzallitoeszkozLeirasSzoveg" Width="200"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="Max. tömeg:"/>
            <TextBox Name="MaxTomegSzoveg" Width="200" PreviewTextInput="TomegSzovegEllenorzes"/>
        </StackPanel>
        <Button Name="OkGomb" Content="OK" HorizontalAlignment="Center" Margin="0,20,0,0" Click="Ok"/>
    </StackPanel>
</Window>
